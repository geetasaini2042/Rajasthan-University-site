---
layout: compress
permalink: /feed.rss
# RSS 2.0 Feed
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ "/" | absolute_url }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <language>{{ site.lang | default: "en" }}</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll {{ jekyll.version }}</generator>
    <copyright>Â© {{ 'now' | date: '%Y' }} {{ site.social.name | xml_escape }}</copyright>

    {% for post in site.posts limit: 5 %}
      {% assign post_absolute_url = post.url | absolute_url %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post_absolute_url }}</link>
        <guid isPermaLink="true">{{ post_absolute_url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>

        <author>{{ post.author | default: site.social.name | xml_escape }}</author>

        {% if post.categories %}
          {% for category in post.categories %}
            <category>{{ category | xml_escape }}</category>
          {% endfor %}
        {% endif %}

        <description>{{ post.excerpt | strip_html | normalize_whitespace | truncate: 400 | xml_escape }}</description>
        <content:encoded><![CDATA[{{ post.content }}]]></content:encoded>
      </item>
    {% endfor %}
  </channel>
</rss>
